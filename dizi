  ##Klavyeden girilen bir cümlenin içindeki küçük a harfini büyük A harfine çeviren program.
  
  public static void main(String[] args) {
        String something;
        int sayac=0;
        Scanner input=new Scanner(System.in);
        System.out.print("Enter something:");
        something=input.nextLine();
        String[] myList=new String[something.length()];
        for (int i=0; i<something.length(); i++){
                myList[i]=something.substring(i,i+1);
                //System.out.print(myList[i]);
            }
       for (int i=0; i<something.length(); i++){
           if(myList[i].equals("a")){
               myList[i]="A";
           }
           System.out.print(myList[i]);
       }  
    }
